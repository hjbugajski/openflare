{
  "$schema": "https://getcomposer.org/schema.json",
  "name": "laravel/react-starter-kit",
  "type": "project",
  "description": "The skeleton application for the Laravel framework.",
  "keywords": [
    "laravel",
    "framework"
  ],
  "license": "MIT",
  "require": {
    "php": "^8.4",
    "inertiajs/inertia-laravel": "^2.0",
    "laravel/fortify": "^1.30",
    "laravel/framework": "^12.0",
    "laravel/reverb": "^1.6",
    "laravel/tinker": "^2.10.1",
    "laravel/wayfinder": "^0.1.9",
    "resend/resend-laravel": "^1.1"
  },
  "require-dev": {
    "fakerphp/faker": "^1.23",
    "laravel/boost": "^1.8",
    "laravel/pail": "^1.2.2",
    "laravel/pint": "^1.24",
    "laravel/sail": "^1.41",
    "mockery/mockery": "^1.6",
    "nunomaduro/collision": "^8.6",
    "pestphp/pest": "^4.1",
    "pestphp/pest-plugin-laravel": "^4.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "setup": [
      "composer install",
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
      "@php -r \"if (!preg_match('/^APP_KEY=base64:.+/m', file_get_contents('.env'))) { passthru('php artisan key:generate'); }\"",
      "@php artisan migrate --force",
      "pnpm install",
      "@php artisan wayfinder:generate --with-form",
      "pnpm run build"
    ],
    "dev": [
      "Composer\\Config::disableProcessTimeout",
      "pnpm exec concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74,#fde047,#86efac\" \"php artisan serve\" \"php artisan queue:work --queue=default,monitors,notifications --tries=3 --timeout=120\" \"php artisan pail --timeout=0\" \"php artisan schedule:work\" \"pnpm run dev\" \"php artisan reverb:start\" --names=server,queue,logs,scheduler,vite,reverb --kill-others"
    ],
    "dev:ssr": [
      "pnpm run build:ssr",
      "Composer\\Config::disableProcessTimeout",
      "pnpm exec concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74,#fde047,#86efac\" \"php artisan serve\" \"php artisan queue:work --queue=default,monitors,notifications --tries=3 --timeout=120\" \"php artisan pail --timeout=0\" \"php artisan schedule:work\" \"php artisan inertia:start-ssr\" \"php artisan reverb:start\" --names=server,queue,logs,scheduler,ssr,reverb --kill-others"
    ],
    "prod:migrate": "@php artisan migrate --force",
    "prod:optimize": "@php artisan optimize",
    "prod:clear": "@php artisan optimize:clear",
    "prod:queue": "@php artisan queue:work --queue=default,monitors,notifications --tries=3 --timeout=120 --sleep=3 --max-jobs=1000 --max-time=3600",
    "prod:scheduler": "@php artisan schedule:work",
    "prod:reverb": "@php artisan reverb:start --host=127.0.0.1 --port=6001",
    "test": [
      "@php artisan config:clear --ansi",
      "@php artisan test"
    ],
    "lint": "vendor/bin/pint",
    "lint:check": "vendor/bin/pint --test",
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "post-update-cmd": [
      "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
      "@php artisan boost:update --ansi"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi",
      "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
      "@php artisan migrate --graceful --ansi"
    ],
    "pre-package-uninstall": [
      "Illuminate\\Foundation\\ComposerScripts::prePackageUninstall"
    ]
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
