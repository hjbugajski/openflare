# ==============================================================================
# OPENFLARE CONFIGURATION
# ==============================================================================
# Copy this file to .env and configure for your environment.
# Generate APP_KEY with: php artisan key:generate
# ==============================================================================

# ------------------------------------------------------------------------------
# Application (required)
# ------------------------------------------------------------------------------

APP_KEY=                              # Required: php artisan key:generate
APP_URL=http://localhost:8000         # Your domain (with protocol)
APP_ENV=local                         # local or production
APP_DEBUG=true                        # false in production

# ------------------------------------------------------------------------------
# Database (optional)
# ------------------------------------------------------------------------------
# OpenFlare uses SQLite by default. The database file is automatically
# created at database/database.sqlite if it doesn't exist.

# DB_DATABASE=/path/to/database.sqlite

# ------------------------------------------------------------------------------
# Email
# ------------------------------------------------------------------------------
# Use "log" for development (emails logged to stderr) and "resend" for
# production email delivery.

MAIL_MAILER=log                       # log (dev) or resend (prod)
MAIL_FROM_ADDRESS=hello@example.com   # Your sender email address
RESEND_API_KEY=                       # Required if MAIL_MAILER=resend

# ------------------------------------------------------------------------------
# WebSockets (Laravel Reverb)
# ------------------------------------------------------------------------------
# Real-time updates for monitor status changes.
# Generate unique secrets for production with: openssl rand -hex 16

REVERB_APP_KEY=openflare-key          # Change in production
REVERB_APP_SECRET=openflare-secret    # Change in production
REVERB_HOST=localhost                 # Your domain (without protocol)
REVERB_PORT=8080                      # 443 if behind HTTPS proxy
REVERB_SCHEME=http                    # https in production

# ------------------------------------------------------------------------------
# Monitor Settings (optional)
# ------------------------------------------------------------------------------

# MONITORS_TEST_MODE=false            # Disable HTTP checks (for UI testing)
# MONITORS_DISPATCH_LIMIT=500         # Max checks per scheduler run
# MONITORS_RETENTION_DAYS=30          # Days to keep check history

# ==============================================================================
# PRODUCTION CHECKLIST
# ==============================================================================
#
# Before deploying to production, ensure:
#
#   APP_ENV=production
#   APP_DEBUG=false
#   APP_URL=https://your-domain.com
#
#   MAIL_MAILER=resend
#   MAIL_FROM_ADDRESS=notifications@your-domain.com
#   RESEND_API_KEY=re_...
#
#   REVERB_APP_KEY=<random>           # openssl rand -hex 16
#   REVERB_APP_SECRET=<random>        # openssl rand -hex 32
#   REVERB_HOST=your-domain.com
#   REVERB_PORT=443
#   REVERB_SCHEME=https
#
# ==============================================================================
