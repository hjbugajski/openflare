# ==============================================================================
# openflare configuration
# ==============================================================================
# copy this file to .env and configure for your environment.
# generate app_key with: php artisan key:generate
# ==============================================================================

# ------------------------------------------------------------------------------
# application (required)
# ------------------------------------------------------------------------------

APP_KEY=                              # php artisan key:generate
APP_URL=http://localhost:8000         # domain with protocol
APP_ENV=local                         # local or production
APP_DEBUG=true                        # false in production

# ------------------------------------------------------------------------------
# database
# ------------------------------------------------------------------------------

DB_CONNECTION=sqlite                  # sqlite or pgsql
# DB_DATABASE=/path/to/database.sqlite  # optional
# DATABASE_URL=postgres://user:pass@host:5432/dbname

# ------------------------------------------------------------------------------
# email
# ------------------------------------------------------------------------------

MAIL_MAILER=log                       # log (dev) or resend (prod)
MAIL_FROM_ADDRESS=hello@example.com
RESEND_API_KEY=                       # required if MAIL_MAILER=resend

# ------------------------------------------------------------------------------
# websockets (laravel reverb)
# ------------------------------------------------------------------------------

REVERB_APP_KEY=openflare-key
REVERB_APP_SECRET=openflare-secret
REVERB_HOST=localhost                 # domain without protocol
REVERB_PORT=8080                      # 443 for https
REVERB_SCHEME=http                    # https in production

# ------------------------------------------------------------------------------
# monitors (optional)
# ------------------------------------------------------------------------------

# MONITORS_TEST_MODE=false            # disable http checks
# MONITORS_DISPATCH_LIMIT=500         # checks per scheduler run
# MONITORS_RETENTION_DAYS=30          # days to keep history
# MONITORS_MAX_PER_USER=100           # max monitors per user

# ------------------------------------------------------------------------------
# security (optional)
# ------------------------------------------------------------------------------

# SESSION_SECURE_COOKIE=              # force https cookies
# PASSWORD_RESET_EXPIRE=15            # minutes

# ==============================================================================
# production checklist
# ==============================================================================
#
# before deploying to production, ensure:
#
#   APP_ENV=production
#   APP_DEBUG=false
#   APP_URL=https://your-domain.com
#
#   MAIL_MAILER=resend
#   MAIL_FROM_ADDRESS=notifications@your-domain.com
#   RESEND_API_KEY=re_...
#
#   REVERB_APP_KEY=<random>           # openssl rand -hex 16
#   REVERB_APP_SECRET=<random>        # openssl rand -hex 32
#   REVERB_HOST=your-domain.com
#   REVERB_PORT=443
#   REVERB_SCHEME=https
#
#   SESSION_SECURE_COOKIE=true
#
# ==============================================================================
